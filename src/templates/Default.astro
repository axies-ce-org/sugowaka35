---
import '../styles/index.css';
import Footer from '../layouts/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja" class="scroll-pt-6 scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="font-noto bg-orange-100 text-[15px] leading-relaxed text-stone-700 antialiased md:text-base md:leading-relaxed">
    <slot />
    <Footer />
  </body>
</html>
<script>
  import '../scripts/index.ts';
</script>
