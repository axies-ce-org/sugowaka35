---
import Layout from './Default.astro';
import Header from '../layouts/Header.astro';
import Menu from '../layouts/Menu.astro';

export interface Props {
  title: string;
  description: string;
  ogType?: string;
}

const { title, description, ogType } = Astro.props;
---

<Layout title={title} description={description} ogType={ogType}>
  <Header />
  <div class="mx-auto max-w-[1160px] px-4 pt-2.5 pb-20 md:px-10 md:pt-2">
    <h1 class="text-base font-bold text-stone-800">{title}</h1>
    <div class="mt-6 flex items-start gap-7 md:mt-10 md:h-full lg:gap-10">
      <main class="grid w-[760px] gap-6 md:gap-10">
        <slot />
      </main>
      <Menu />
    </div>
  </div>
</Layout>
