---
import Link from '../components/Link.astro';

type Props = {
  title?: string;
  items: {
    text: string;
    href: string;
    memo?: string;
  }[];
};

const { title, items } = Astro.props;
---

<div>
  <h6 class="font-bold">{title}</h6>
  <ul>
    {
      items.map(({ text, href, memo }) => {
        return (
          <li>
            <Link href={href}>{text}</Link>
            {memo && <span class="text-stone-700">（{memo}）</span>}
          </li>
        );
      })
    }
  </ul>
</div>
