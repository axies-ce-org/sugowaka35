---
type Props = {
  article: number;    //条
  paragraph: number;  //項
  item: number;       //号
}

const {article, paragraph, item} = Astro.props;
---

<dl class="bg-stone-100 rounded-2xl p-3 md:p-4">
  <dt class="text-orange-600 text-base leading-relaxed font-bold tracking-[0.22em]">{article}条{paragraph}項{item}号</dt>
  <dd class="mt-2 md:mt-2.5"><slot /></dd>
</dl>
