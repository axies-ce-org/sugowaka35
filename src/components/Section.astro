---
type Props = {
  id?: string,
  number: string,
  title: string,
  description?: string,
}

const {id, number, title, description} = Astro.props;
---

<section id={id} class="overflow-hidden rounded-2xl bg-white">
  <div class="flex flex-col bg-orange-200 px-3 py-5 md:px-6 md:py-10 lg:p-10">
    <div class="flex gap-2 md:gap-6 lg:gap-10">
      <div>
        <p class="bg-orange-600 text-white text-[10px] leading-none md:text-xs font-medium md:leading-none py-0.5 px-1 md:px-2.5 md:py-1">section</p>
        <p class="text-orange-600 text-[34px] md:text-[56px] leading-none md:leading-none font-medium text-center">{number}</p>
      </div>
      <h2 class="title text-[28px] leading-normal md:text-5xl md:leading-normal font-medium text-stone-800 mt-2">{title}</h2>
    </div>
    {description && <p class="mt-3 md:mt-2 md:ml-[87px] lg:ml-[103px]">{description}</p>}
  </div>
  <div class="section-content px-3 pb-3 pt-6 md:px-6 md:py-10 lg:p-10 flex flex-col gap-5 md:gap-6">
    <slot />
  </div>
</section>
