---
import { twJoin } from 'tailwind-merge';

type Props = {
  number: string;
  title: string;
  description?: string;
  marginTop?: boolean;
};

const { number, title, description, marginTop } = Astro.props;
---

<section
  id={'sec-' + number}
  class={twJoin('section-top overflow-hidden rounded-2xl bg-white', marginTop && 'mt-6 md:mt-10')}
>
  <div class="flex flex-col bg-orange-200 px-3 py-5 md:px-6 md:py-10 lg:p-10">
    <div class="flex gap-2 md:gap-6 lg:gap-10">
      <div class="font-inter">
        <p
          class="bg-orange-600 px-1.5 py-0.5 text-center text-[0.625rem]/none font-medium text-white md:py-1 md:text-xs/none"
        >
          section
        </p>
        <p class="text-center text-[2.125rem]/none font-medium text-orange-600 md:text-[3.5rem]/none">
          {number}
        </p>
      </div>
      <h2 class="mt-2 text-[1.75rem]/normal font-medium text-stone-800 md:text-5xl/normal">
        {title}
      </h2>
    </div>
    {description && <p class="mt-3 md:ml-[5.4375rem] md:mt-2 lg:ml-[6.4375rem]">{description}</p>}
  </div>
  <div
    class="section-content px-3 py-1 md:px-6 md:py-4 lg:px-10 [&_a:hover]:no-underline [&_a]:text-orange-500 [&_a]:underline"
  >
    <slot />
  </div>
</section>
