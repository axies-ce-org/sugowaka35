---
type Props = {
  number: string;
  title: string;
  description?: string;
};

const { number, title, description } = Astro.props;
---

<section id={'sec-' + number} class="section-top overflow-hidden rounded-2xl bg-white">
  <div class="flex flex-col bg-orange-200 px-3 py-5 md:px-6 md:py-10 lg:p-10">
    <div class="flex gap-2 md:gap-6 lg:gap-10">
      <div>
        <p
          class="bg-orange-600 py-0.5 px-1 text-[10px] font-medium leading-none text-white md:px-2.5 md:py-1 md:text-xs md:leading-none"
        >
          section
        </p>
        <p class="text-center text-[34px] font-medium leading-none text-orange-600 md:text-[56px] md:leading-none">
          {number}
        </p>
      </div>
      <h2 class="mt-2 text-[28px] font-medium leading-normal text-stone-800 md:text-5xl md:leading-normal">{title}</h2>
    </div>
    {description && <p class="mt-3 md:mt-2 md:ml-[87px] lg:ml-[103px]">{description}</p>}
  </div>
  <div class="section-content px-3 py-1 md:px-6 md:py-4 lg:px-10">
    <slot />
  </div>
</section>
