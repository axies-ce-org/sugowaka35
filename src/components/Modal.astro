---
type Props = {
  id: string;
  word?: string;
  lang?: string;
};

const { id, word, lang } = Astro.props;
---

<>
  <div class="micromodal-slide absolute hidden" id={`modal-${id}`} aria-hidden="true">
    <div
      class="modal__overlay fixed inset-0 z-30 flex items-center justify-center bg-black/50 transition-opacity duration-500"
      tabindex="-1"
      data-micromodal-close
    >
      <div
        class="modal__container relative z-40 w-full max-w-[21.25rem] px-4 md:max-w-[30rem] md:px-0"
        role="dialog"
        aria-modal="true"
        aria-labelledby={`modal-${id}-title`}
      >
        <div class="ml-3 inline-block rounded-t-lg bg-orange-600 px-4 py-0.5 md:ml-4 md:px-4 md:py-1">
          <h2
            class="modal__title text-sm/normal font-medium uppercase text-white md:text-base"
            id={`modal-${id}-title`}
          >
            {word ? 'Word' : 'Memo'}
          </h2>
        </div>
        <div class="rounded-2xl bg-white p-6 text-center">
          <div class="modal__content break-words text-left" id={`modal-${id}-content`}>
            {word && <div class="mb-2 border-b border-orange-500 pb-1 font-bold text-orange-600">{word}</div>}
            <div class="mt-3 first-of-type:mt-0 md:mt-4">
              <slot />
            </div>
          </div>
          <div class="mt-4 inline-block md:mt-6">
            <button
              class="rounded-lg bg-neutral-500 px-4 py-1 text-base text-white"
              data-micromodal-close
              aria-label="Close this dialog window">{lang === 'en' ? 'Close' : '閉じる'}</button
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</>
