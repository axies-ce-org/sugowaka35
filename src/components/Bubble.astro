---
import { twJoin } from 'tailwind-merge';

type Props = {
  speaker: string;
  feLevel: string;
};

const { speaker, feLevel } = Astro.props;
---

<div class="flex gap-[1.1875rem] md:gap-7">
  <figure class="w-9 min-w-[2.25rem] text-center md:w-12 md:min-w-[3rem]">
    <img
      src={
        '/assets/images/' +
        (
          speaker === '小中' || speaker === 'Konaka'
          ? 'konaka-fe'
          : speaker === '隅木' || speaker === 'Sumiki'
          ? 'sumiki-fe'
          : 'daiin-fe'
        )
        + feLevel + '.png'
      }
      alt=""
      width="480"
      height="480"
    />
    <figcaption class="text-[0.6875rem]/relaxed font-bold">{speaker}</figcaption>
  </figure>
  <div
    class={
      twJoin(
        'relative grow rounded-lg bg-white p-2 md:p-4',
        'before:absolute before:left-[-0.9375rem] before:top-4 before:block before:border-y-[6px] before:border-r-[15px] before:border-y-transparent before:border-r-white md:before:-left-5 md:before:border-y-8 md:before:border-r-[20px]',
      )
    }
  >
    <p><slot /></p>
  </div>
</div>
