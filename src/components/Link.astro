---
import type { HTMLAttributes } from 'astro/types'
import { getRelativePath } from '../libs/getRelativePath';

interface Props extends HTMLAttributes<'link'> {
  href: string;
}

const { href: _href, ...attrs } = Astro.props;

const href = getRelativePath({
  from: new URL(Astro.request.url).pathname,
  to: _href,
})
---

<link href={href} {...attrs} />
