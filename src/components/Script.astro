---
import type { HTMLAttributes } from 'astro/types'
import { getRelativePath } from '../libs/getRelativePath';

type Props = HTMLAttributes<'script'>

const { src: _src, ...attrs } = Astro.props;

const src = getRelativePath({
  from: new URL(Astro.request.url).pathname,
  to: _src,
})
---

<script src={src} {...attrs}></script>
