---
import { twJoin } from 'tailwind-merge';
import Layout from '../../templates/Default.astro';
import Header from '../../layouts/Header.astro';
import Menu from '../../layouts/Menu.astro';

const Chapter = [
  {
    title: 'Copyright Basics',
    text: 'This section explains the purpose of the Copyright Act, emphasizing that the the Act is not written solely to protect rights.',
    href: '/en/basis/',
    src: '/assets/images/1-1-1_en.png',
    width: '1277',
    height: '597',
  },
  {
    title: 'Copyright in Classes',
    text: 'This section explains the legal rules regarding the use of third-party copyrighted works in classes, including the content and definitions of terms, as well as the process for handling copyrighted works in classes.',
    href: '/en/copyright/',
    src: '/assets/images/2-1-1.png',
    width: '1713',
    height: '668',
  },
  {
    title: 'Q&A on the Use of Copyrighted Works in the Classroom',
    text: 'This section provides explanations in a Q&A format about the requirements for dealing with third-party copyrighted works in classes.',
    href: '/en/use/',
    src: '/assets/images/2-4_en.png',
    width: '1277',
    height: '596',
  },
  {
    title: 'How to Obtain Permission',
    text: 'When a copyrighted work cannot be freely used due to the protection period or usage conditions/terms of use, or if rights limitations cannot be applied, the permission of the copyright owner is required.',
    href: '/en/permission/',
    src: '/assets/images/1-1-3_en.png',
    width: '1277',
    height: '597',
  },
  {
    title: 'Quiz',
    text: 'Based on what has been/you have learned, you are encouraged to try the 20-question copyright quiz.',
    href: '/en/quiz/',
    src: '/assets/images/quiz-featured.png',
    width: '1560',
    height: '825',
  },
];

const arrowCircleClass = 'h-8 w-8 transition-transform duration-200 group-hover:translate-x-2 md:h-9 md:w-9';
---

<Layout ogType="website" isEN>
  <div class="px-4 pb-16 pt-6 md:pb-20">
    <div class="mx-auto max-w-[57.5rem]">
      <Header img="none" isEN />
      <div
        class={twJoin(
          'translate-y-0 transition-transform duration-300',
          'xl:[[data-is-searching=true]_&]:translate-x-[max(calc((var(--search-area-width)+2.5rem)-((100vw-57.5rem-var(--scrollbar-width))/2)),0px)]'
        )}
      >
        <div class="mx-auto mt-[1.625rem] text-center">
          <h1 class="font-bold">
            <img
              src="/assets/images/title_en.png"
              alt="A must-read for teachers Understanding Copyright in Classes"
              width="1722"
              height="661"
              class="inline-block max-w-[93.6%]"
            />
          </h1>
          <div class="mt-3 inline-block md:mt-[1.875rem]">
            <img src="/assets/images/kv.png" alt="" width="1632" height="760" class="mx-auto max-w-[71.4%]" />
          </div>
        </div>
        <div class="mt-6 md:mt-10 md:px-0">
          <p class="text-base/relaxed">
            This material was designed primarily for teachers at educational institutions.<br />This material has been
            produced by AXIES with a grant from the Common Purpose Fund of the Society for the Administration of
            Remuneration for Public Transmission for School Lessons (SARTRAS).
          </p>
          <a
            href="/en/introduction/"
            class="group mt-6 flex items-center gap-2 rounded-2xl bg-white p-4 transition-opacity hover:opacity-95 md:mt-10 md:p-10"
          >
            <div class="grow">
              <h2 class="text-lg/normal font-medium text-stone-800 md:text-2xl/normal">Introduction</h2>
              <div class="mt-1 md:mt-2">
                <p class="text-sm/relaxed">
                  This is a guide on how to read this material, including introductions to the characters and the
                  authors.
                </p>
              </div>
            </div>
            <img src="/assets/images/arrow-circle.svg" alt="" width="36" height="37" class={arrowCircleClass} />
          </a>
          <ul class="mt-6 grid gap-6 md:mt-10 md:gap-10">
            {
              Chapter.map(({ title, text, href, src, width, height }, i) => {
                return (
                  <li>
                    <a
                      href={href}
                      class="group grid gap-6 rounded-2xl bg-white p-4 transition-opacity hover:opacity-95 md:flex md:gap-10 md:p-10"
                    >
                      <div class="grid gap-2 md:gap-4">
                        <div class="grid gap-1 font-medium md:gap-0">
                          <span class="font-inter text-5xl/none text-orange-600 md:text-[5rem]/none">
                            {'0' + (i + 1)}
                          </span>
                          <div class="flex gap-2">
                            <h3 class="grow text-2xl/normal text-stone-800 md:text-[2rem]/normal" set:html={title} />
                            <img
                              src="/assets/images/arrow-circle.svg"
                              alt=""
                              width="36"
                              height="37"
                              class={twJoin('mt-0.5 md:mt-2', arrowCircleClass)}
                            />
                          </div>
                        </div>
                        <p>{text}</p>
                      </div>
                      <img src={src} alt="" width={width} height={height} class="object-contain md:max-w-[50%]" />
                    </a>
                  </li>
                );
              })
            }
          </ul>
          {
            [
              [
                {
                  label: 'References',
                  href: '/en/references/',
                },
                {
                  label: 'Index',
                  href: '/en/index/',
                },
              ],
              [
                {
                  label: 'Production Team',
                  href: '/en/team/',
                },
                {
                  label: 'This Project',
                  href: '/en/afterwords/',
                },
                {
                  label: 'License',
                  href: '/en/license/',
                },
              ],
            ].map((list) => {
              return (
                <div class="mt-6 grid gap-6 md:mt-10 md:flex">
                  {list.map(({ label, href }) => {
                    return (
                      <a
                        href={href}
                        class="group flex items-center gap-1 rounded-2xl bg-white p-4 transition-opacity hover:opacity-95 md:flex-1 md:p-10"
                      >
                        <h2 class="flex-1 text-lg/normal font-medium text-stone-800 md:text-2xl/normal">{label}</h2>
                        <img
                          src="/assets/images/arrow-circle.svg"
                          alt=""
                          width="36"
                          height="37"
                          class={arrowCircleClass}
                        />
                      </a>
                    );
                  })}
                </div>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
  <Menu sidebar="none" isEN />
</Layout>
