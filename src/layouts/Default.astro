---
import '../styles/index.css';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-orange-100 antialiased text-stone-700 text-[15px] md:text-base leading-relaxed md:leading-relaxed font-noto">
    <slot />
    <Footer />
  </body>
</html>
<script>
  import '../scripts/index.ts';
</script>
