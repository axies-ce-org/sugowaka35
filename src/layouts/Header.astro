---
type Props = {
  img?: string;
};

const { img } = Astro.props;
---

<>
  <header class="border-t-4 border-t-orange-400">
    {
      img !== 'none' && (
        <div class="flex w-full justify-between px-4 pb-4 pt-3 md:mx-auto md:max-w-[1160px] md:px-10 md:pb-0">
          <a href="/" class="inline-block w-[218px] font-bold md:w-[340px]">
            <img src="/assets/images/logo.svg" alt="すごくわかる著作権と授業" decoding="async" />
          </a>
        </div>
      )
    }
  </header>
  <button
    id="js-hamburger"
    class="fixed top-4 right-4 z-40 flex flex-col gap-1.5 text-[10px] leading-none transition-colors duration-200 md:hidden"
  >
    <span class="hamburger flex w-6 flex-col gap-1">
      <span class="h-px w-full bg-black transition-transform duration-300"></span>
      <span class="h-px w-full bg-black transition-transform duration-300"></span>
      <span class="h-px w-full bg-black transition-transform duration-300"></span>
    </span>
    目次
  </button>
</>
