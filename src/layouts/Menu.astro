          {
            title: "引用（32条1項）",
            href: "#sec-02",
          },
          {
            title: "授業目的の複製等（35条）",
            href: "#sec-03",
          },
          {
            title: "改正著作権法第35条運用指針",
            href: "#sec-04",
          },
      ]} />
      <MenuItem
        href="/use/"
        title="授業における著作物利用Q&A"
        submenu={[
          {
            title: "授業における著作物利用Q&A",
            href: "#sec-01",
          },
      ]} />
      <MenuItem
        href="/permission/"
        title="許諾の取り方"
        submenu={[
          {
            title: "利用許諾の取り方",
            href: "#sec-01",
          },
      ]} />
      <MenuItem
        href="/extra/"
        title="資料集・索引"
        submenu={[
          {
            title: "著作権を知るための資料集",
            href: "#sec-01",
          },
          {
            title: "索引",
            href: "#sec-02",
          },
      ]} />
      <MenuItem
        href="/afterwords/"
        title="おわりに"
        submenu={[
          {
            title: "おわりに",
            href: "#sec-01",
          },
          {
            title: "制作チーム紹介",
            href: "#sec-02",
          },
      ]} />
    </ul>
  </nav>
</div>
