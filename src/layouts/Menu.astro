---
import MenuItem from '../components/MenuItem.astro';
export interface Props {
  sidebar?: string;
}

const { sidebar } = Astro.props;
---

<div
  id="js-nav"
  class={`fixed left-full top-0 translate-x-0 transition-transform duration-300 print:hidden md:sticky md:left-auto md:right-0 md:top-10 md:block md:max-h-[100vh-40px] ${
    sidebar === 'none' && 'md:hidden'
  }`}
>
  <nav
    class="z-20 min-h-screen w-screen bg-white px-4 pb-6 pt-14 md:min-h-0 md:w-60 md:rounded-2xl md:p-5 lg:w-[280px] lg:p-6"
  >
    <ul
      class="text-[17px] font-bold leading-normal text-stone-800 md:flex md:flex-col md:gap-2 md:text-base md:leading-normal"
    >
      <MenuItem
        href="/introduction/"
        title="はじめに"
        submenu={[
          {
            title: 'はじめに',
            href: '/introduction/#sec-01',
          },
          {
            title: '本ウェブサイトに出てくるひとたち',
            href: '/introduction/#sec-02',
          },
          {
            title: '法律の条文の参照について',
            href: '/introduction/#sec-03',
          },
        ]}
      />
      <MenuItem
        href="/basis/"
        title="著作権の基礎"
        submenu={[
          {
            title: '著作権法とは',
            href: '/basis/#sec-01',
          },
          {
            title: '著作物とは',
            href: '/basis/#sec-02',
          },
          {
            title: '著作者とは',
            href: '/basis/#sec-03',
          },
          {
            title: '著作権とは',
            href: '/basis/#sec-04',
          },
        ]}
      />
      <MenuItem
        href="/copyright/"
        title="授業における著作権"
        submenu={[
          {
            title: '授業と著作物',
            href: '/copyright/#sec-01',
          },
          {
            title: '引用（32条1項）',
            href: '/copyright/#sec-02',
          },
          {
            title: '授業目的の複製等（35条）',
            href: '/copyright/#sec-03',
          },
          {
            title: '改正著作権法第35条運用指針',
            href: '/copyright/#sec-04',
          },
        ]}
      />
      <MenuItem
        href="/use/"
        title="授業における著作物利用Q&A"
        submenu={[
          {
            title: '授業における著作物利用Q&A',
            href: '/use/#sec-01',
          },
        ]}
      />
      <MenuItem
        href="/permission/"
        title="許諾の取り方"
        submenu={[
          {
            title: '利用許諾の取り方',
            href: '/permission/#sec-01',
          },
        ]}
      />
      <MenuItem href="/quiz/" title="著作権クイズ" />
      <MenuItem
        href="/extra/"
        title="資料集・索引"
        submenu={[
          {
            title: '著作権を知るための資料集',
            href: '/extra/#sec-01',
          },
          {
            title: '索引',
            href: '/extra/#sec-02',
          },
        ]}
      />
      <MenuItem
        href="/afterwords/"
        title="おわりに"
        submenu={[
          {
            title: '制作チーム紹介',
            href: '/afterwords/#sec-01',
          },
          {
            title: 'おわりに',
            href: '/afterwords/#sec-02',
          },
          {
            title: 'ライセンス',
            href: '/afterwords/#sec-03',
          },
        ]}
      />
    </ul>
  </nav>
</div>
