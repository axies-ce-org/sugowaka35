---
import Layout from './Default.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <Header />
  <div class="mx-auto max-w-[1160px] px-4 pt-2.5 pb-10 md:p-10">
    <h1 class="text-base font-bold text-stone-800">{title}</h1>
    <div class="flex items-start gap-10 mt-6 md:mt-10">
      <main class="grid w-[760px] gap-6 md:gap-10">
        <slot />
      </main>
      <Sidebar />
    </div>
  </div>
</Layout>
